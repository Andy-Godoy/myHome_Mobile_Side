<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_color"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_new_properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".NewProperties">

        <ImageView
            android:id="@+id/imageHome"
            android:layout_width="43dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/icon" />

        <TextView
            android:id="@+id/lblMyHome"
            android:layout_width="43dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"

            android:layout_marginTop="44dp"
            android:ems="10"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/lblNuevaPropiedad"
            android:layout_width="140dp"
            android:layout_height="19dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:fontFamily="@font/opensansbold"
            android:gravity="center"
            android:text="@string/nuevapropiedad"
            android:textColor="@color/general_titulo"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/txtCalle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="104dp"
            android:background="@drawable/borde_redondo"
            android:hint="@string/calle"
            android:inputType="text"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txtPiso"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtNumero"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/lblCalle"
            android:layout_width="40dp"
            android:layout_height="19dp"
            android:layout_marginTop="76dp"
            android:ems="10"
            android:fontFamily="@font/opensanssemibold"
            android:gravity="center"
            android:text="@string/calle"
            android:textColor="@color/general_titulo"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/lblNumero"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/txtPiso"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginTop="216dp"
            android:background="@drawable/borde_redondo"
            android:hint="@string/piso"
            android:inputType="number"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtDpto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.017"
            tools:ignore="VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/lblPiso"
            android:layout_width="40dp"
            android:layout_height="19dp"
            android:layout_marginTop="192dp"
            android:ems="10"
            android:fontFamily="@font/opensanssemibold"
            android:gravity="center"
            android:text="@string/piso"
            android:textColor="@color/general_titulo"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/txtPiso"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/txtDpto"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginTop="216dp"
            android:background="@drawable/borde_redondo"
            android:hint="@string/dpto"
            android:inputType="text"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtPiso"
            app:layout_constraintStart_toEndOf="@+id/txtNumero"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.017"
            tools:ignore="VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/lblDpto"
            android:layout_width="40dp"
            android:layout_height="19dp"
            android:layout_marginTop="192dp"
            android:ems="10"
            android:fontFamily="@font/opensanssemibold"
            android:gravity="center"
            android:text="@string/dpto"
            android:textColor="@color/general_titulo"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/txtDpto"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/lblNumero"
            android:layout_width="64dp"
            android:layout_height="19dp"
            android:layout_marginTop="192dp"
            android:ems="10"
            android:fontFamily="@font/opensanssemibold"
            android:gravity="center"
            android:text="@string/numero"
            android:textColor="@color/general_titulo"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/txtNumero"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/txtNumero"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginTop="216dp"
            android:background="@drawable/borde_redondo"
            android:hint="@string/numero"
            android:inputType="number"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtDpto"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.017"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/txtPais"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="340dp"
            android:background="@drawable/borde_redondo"
            android:hint="@string/pais"
            android:inputType="text"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txtPiso"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtNumero"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/lblPais"
            android:layout_width="40dp"
            android:layout_height="19dp"
            android:layout_marginTop="308dp"
            android:ems="10"
            android:fontFamily="@font/opensanssemibold"
            android:gravity="center"
            android:text="@string/pais"
            android:textColor="@color/general_titulo"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/lblNumero"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/txtProvincia"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="460dp"
            android:background="@drawable/borde_redondo"
            android:hint="@string/provincia"
            android:inputType="text"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txtPiso"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtNumero"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/lblProvincia"
            android:layout_width="75dp"
            android:layout_height="19dp"
            android:layout_marginTop="428dp"
            android:ems="10"
            android:fontFamily="@font/opensanssemibold"
            android:gravity="center"
            android:text="@string/provincia"
            android:textColor="@color/general_titulo"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/lblNumero"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/txtLocalidad"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="580dp"
            android:background="@drawable/borde_redondo"
            android:hint="@string/localidad"
            android:inputType="text"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txtPiso"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtNumero"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/lblLocalidad"
            android:layout_width="75dp"
            android:layout_height="19dp"
            android:layout_marginTop="548dp"
            android:ems="10"
            android:fontFamily="@font/opensanssemibold"
            android:gravity="center"
            android:text="@string/localidad"
            android:textColor="@color/general_titulo"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/lblNumero"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/txtBarrio"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="700dp"
            android:background="@drawable/borde_redondo"
            android:hint="@string/barrio"
            android:inputType="text"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txtPiso"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtNumero"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/lblBarrio"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:layout_marginTop="668dp"
            android:ems="10"
            android:fontFamily="@font/opensanssemibold"
            android:gravity="center"
            android:text="@string/barrio"
            android:textColor="@color/general_titulo"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/lblNumero"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
