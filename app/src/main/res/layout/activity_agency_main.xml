<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    tools:context=".ListAgencieProperties">

    <LinearLayout
        android:id="@+id/agencyMainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/headerProperties"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="0dp">
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:src="@drawable/icon"
                tools:text="@string/lbl_my_home" />

            <TextView
                android:id="@+id/lblProperties"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/lbl_mispropiedades"
                android:textAlignment="textStart"
                android:textSize="16sp"
                tools:text="@string/lbl_mispropiedades" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7pxh"
            android:layout_marginEnd="@dimen/_7pxh"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginBottom="10dp">
            <FrameLayout
                android:id="@+id/frameStacksearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48pxv">
                <ImageView
                    android:id="@+id/imageSearch"
                    android:layout_width="@dimen/_18pxh"
                    android:layout_height="@dimen/_18pxh"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_14pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_marginEnd="@dimen/_14pxh"
                    android:layout_marginBottom="@dimen/_15pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_search"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_search" />
            </FrameLayout>
        </LinearLayout>
        <ScrollView
            android:id="@+id/propertyScrollList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Lista de propiedades">
            <LinearLayout
                android:id="@+id/cardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Tus tarjetas se agregarán aquí -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout="@layout/card_property">
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
        <FrameLayout
            android:id="@+id/footerBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">
            <LinearLayout
                android:id="@+id/linearRowhome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="0dp">

                <Button
                    android:id="@+id/btnPropiedades"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:layout_weight="0.33"
                    android:drawableTop="@drawable/img_home"
                    android:onClick="verPropiedades"
                    android:text="Propiedades" />
                <Button
                    android:id="@+id/btnNuevaPropiedad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:drawableTop="@drawable/img_plus"
                    android:layout_gravity="center"
                    android:text="Nueva Propeiedad"
                    android:onClick="nuevaPropiedad"
                    android:layout_margin="0dp"
                />
                <Button
                    android:id="@+id/btnPerfil"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:drawableTop="@drawable/img_user"
                    android:layout_gravity="center"
                    android:text="Perfil"
                    android:onClick="verPerfil"
                    android:layout_margin="0dp"
                />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>