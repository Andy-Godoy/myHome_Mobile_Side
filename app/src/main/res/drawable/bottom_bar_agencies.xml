<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout android:id="@+id/frameBottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/groupStylegray_200"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout android:id="@+id/linearRowhome"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_1pxv"
            android:layout_marginTop="@dimen/_3pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:id="@+id/linearColumnhome"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_width="0dp" android:orientation="vertical">
                <ImageView android:id="@+id/imageHome"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_22pxh"
                    android:layout_width="@dimen/_20pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_home"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_home"/>
                <TextView android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtPropiedades"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2pxh"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@string/lbl_propiedades"
                    style="@style/txtOpenSansopensansmedium12_1" tools:text="@string/lbl_propiedades"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearNuevaPropiedad"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_width="0dp" android:orientation="vertical">
                <ImageView android:id="@+id/imagePlus"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_22pxh"
                    android:layout_width="@dimen/_20pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_plus"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_plus"/>
                <TextView android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtNuevaPropiedad"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2pxh"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@string/lbl_nueva_propiedad"
                    style="@style/txtOpenSansopensansmedium12_1" tools:text="@string/lbl_nueva_propiedad"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearPerfil"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_weight="1" android:layout_width="0dp" android:orientation="vertical">
                <ImageView android:id="@+id/imageUser"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_22pxh"
                    android:layout_width="@dimen/_20pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_user"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_user"/>
                <TextView android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtPerfil"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2pxh"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@string/lbl_perfil"
                    style="@style/txtOpenSansopensansmedium12_1" tools:text="@string/lbl_perfil"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</selector>